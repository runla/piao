<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="?android:attr/selectableItemBackground"
    app:cardCornerRadius="16dp"
    app:cardElevation="15dp">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primaryYellow"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_goods_bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y400"
            android:scaleType="centerCrop"
            android:src="@mipmap/pic_shop_tem_bg"/>

        <TextView
            android:id="@+id/tv_shop_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/iv_goods_bg"
            android:layout_margin="8dp"
            android:layout_toRightOf="@+id/tv_price"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="3"
            android:text="轻松熊小小公仔轻松熊小公仔"
            android:textColor="@color/md_grey_800_color_code"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_shop_description"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/tv_shop_description"
            android:layout_below="@+id/iv_goods_bg"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:lines="3"
            android:text="$18"
            android:textColor="@color/md_grey_900_color_code"
            android:textSize="20sp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>